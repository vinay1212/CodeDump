#include<iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin>>n;
    for(int i = 1; i < 2*n; i++)
        cout<<"*";
    cout<<endl;
    for (int i = 1; i < n; i++) {
   
        for (int j = i; j < n; j++)
            cout<<"*";
   
        for (int j = 0; j < 2 * i - 1; j++)
            cout<<" ";
   
        for (int j = i; j < n; j++)
            cout<<"*";
   
        cout<<endl;
    }

    for (int i = 0; i < n - 2; i++) {
   
        for (int j = 0; j < i + 2; j++)
            cout<<"*";
   
        for (int j = 0; j < 2 * (n - 1 - i) - 3; j++)
            cout<<" ";
   
        for (int j = 0; j < i + 2; j++)
            cout<<"*";
   
        cout<<endl;
    }
    for(int i = 1; i < 2*n; i++)
        cout<<"*";
	return 0;
}
